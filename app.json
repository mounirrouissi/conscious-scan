{
  "expo": {
    "name": "ConsciousScan",
    "slug": "conscious-scan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#10B981"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.consciousscan.app",
      "infoPlist": {
        "NSCameraUsageDescription": "ConsciousScan needs camera access to scan product barcodes and ingredient lists.",
        "NSPhotoLibraryUsageDescription": "ConsciousScan needs photo library access to analyze product images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#10B981"
      },
      "package": "com.consciousscan.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ConsciousScan to access your camera to scan products."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ConsciousScan to access your photos to analyze product images."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
